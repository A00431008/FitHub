@model IEnumerable<FitHub.Models.Amenity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AmenityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxCapacityPerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPerPerson)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AmenityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxCapacityPerDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostPerPerson)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AmenityID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AmenityID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AmenityID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
