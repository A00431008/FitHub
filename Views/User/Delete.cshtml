@model FitHub.Models.User

@{
    ViewData["Title"] = "Delete";
}

<div class="body-header">
    <h1>Delete</h1>
    <hr />
    <form class="row action-prompt" asp-action="Delete">
        <h5 class="text-danger col-md-9">Warning: This Action CANNOT be undone!!! Proceed?</h5>
        <div class="col">
            <input type="hidden" asp-for="UserID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a class="btn btn-success" asp-action="Index">Back</a>
        </div>
    </form>
    <hr />
</div>

<div>
    <div class="mt-3  body-content">
        <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex align-items-center flex-wrap">
                <h6 class="mb-0 col-sm-4">
                    Full Name
                </h6 class = "col-sm-6">
                <span class="text-secondary">@Html.DisplayFor(m => m.FirstName) @Html.DisplayFor(m=> m.LastName)</span>
            </li>
            <li class="list-group-item d-flex align-items-center flex-wrap">
                <h6 class="mb-0 col-sm-4">
                    @Html.DisplayNameFor(m => m.Email)
                </h6>
                <span class="text-secondary">@Html.DisplayFor(m => m.Email)</span>
            </li>
            <li class="list-group-item d-flex align-items-center flex-wrap">
                <h6 class="mb-0 col-sm-4">
                    @Html.DisplayNameFor(m => m.PhoneNumber)
                </h6>
                <span class="text-secondary">@Html.DisplayFor(m => m.PhoneNumber)</span>
            </li>
            <li class="list-group-item d-flex align-items-center flex-wrap">
                <h6 class="mb-0 col-sm-4">
                    @Html.DisplayNameFor(m => m.DOB)
                </h6>
                <span class="text-secondary">@Html.DisplayFor(m => m.DOB)</span>
            </li>
            <li class="list-group-item d-flex align-items-center flex-wrap">
                <h6 class="mb-0 col-sm-4">
                    @Html.DisplayNameFor(m => m.Gender)
                </h6>
                <span class="text-secondary">@Html.DisplayFor(m => m.Gender)</span>
            </li>
            <li class="list-group-item d-flex align-items-center flex-wrap">
                <h6 class="mb-0 col-sm-4">
                    @Html.DisplayNameFor(m => m.Address)
                </h6>
                <span class="text-secondary">
                    @Html.DisplayFor(m => m.Address), 
                    @Html.DisplayFor(m => m.City), 
                    @Html.DisplayFor(m => m.Province),  
                    @Html.DisplayFor(m => m.Country)
                </span>
            </li>
            <li class="list-group-item d-flex  align-items-center flex-wrap">
                <h6 class="mb-0 col-sm-4">
                    @if (Model.Country == "USA") {<span>Zip-Code</span>
                    }
                    else {
                        <span>Postal Code</span>
                    }
                </h6>
                <span class="text-secondary">@Html.DisplayFor(m => m.PostalCode)</span>
            </li>
            @{var status = User.FindFirst("status")?.Value;
              if (status == "Administrator")
              {
                  <li class="list-group-item d-flex  align-items-center flex-wrap">
                      <h6 class="mb-0 col-sm-4">
                          @Html.DisplayNameFor(m => m.IsAdmin)
                      </h6>
                      <span class="text-secondary">
                          @if (Model.IsAdmin)
                          {
                              <span>Yes</span>
                          }
                          else
                          {
                              <span>No</span>
                          }
                      </span>
                  </li>
              }}
        </ul>
    </div>


    
    
</div>
